@{
    ViewData["Title"] = "Applications";
}
@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <h6 class="display-6">Applications</h6>
    <table class="table table-hover table-striped">
        <thead>
            <th>Email</th>
            <th>Full Name</th>
            <th>Apply At</th>
            <th>Course</th>
        </thead>
        <tbody>
            @foreach(Candidate candidate in Model){
                <tr>
                    <td>@candidate.Email</td>
                    <td>@candidate.FirstName @candidate.LastName</td>
                    <td>@candidate.ApplyAt</td>
                    <td>@candidate.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no appliation yet. Please click here to
        <a class="alert-link" asp-action="Apply">apply.</a>
    </div>
}