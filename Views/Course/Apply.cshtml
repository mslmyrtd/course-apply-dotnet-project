@model Candidate
<div class="display-6">
    Apply
</div>

<form action="">
    <div class="form-group my-2">
        <label for="Email">Email</label>
        <input type="email" name="Email" class="form-control">
    </div>
    <div class="form-group my-2">
        <label for="fn">Firstname</label>
        <input type="text" name="fn" class="form-control">
    </div>
    <div class="form-group my-2">
        <label for="ln">Lastname</label>
        <input type="text" name="ln" class="form-control">
    </div>
    <div class="form-group my-2">
        <label for="ln">Age</label>
        <select  name="Age"  class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>
    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input type="radio" id="mvc" name=SelectedCourse value="ASP.NET Core MVC">
            <label for="">ASP.NET Core MVC</label>
        </p>
        <p>
            <input type="radio" id="api" name=SelectedCourse value="ASP.NET Core API">
            <label for="">ASP.NET Core API</label>
        </p>
        <p>
            <input type="radio" id="blazor" name=SelectedCourse value="Blazor">
            <label for="">Blazor</label>
        </p>
    </fieldset>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" href="/">Home</a>
    </div>
</form>